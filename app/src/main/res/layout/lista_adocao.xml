<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/rosaClaro">

    <ImageView
            android:id="@+id/imgDog"
            android:layout_height="56dp"
            android:layout_width="56dp"
            android:background="@drawable/circulo"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/txtNome"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000"
            android:fontFamily="@font/milho"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            tools:text="Toquino"
            app:layout_constraintStart_toEndOf="@+id/imgDog"
            app:layout_constraintTop_toTopOf="@+id/imgDog"/>

    <TextView
            android:id="@+id/txtMensagem"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="10sp"
            tools:text="Quer ser meu amigo?!"
            app:layout_constraintStart_toStartOf="@+id/txtNome"
            app:layout_constraintTop_toBottomOf="@+id/txtNome"/>

    <TextView
            android:id="@+id/txtIdade"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="8sp"
            android:layout_marginEnd="16dp"
            tools:text="2 meses de idade"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtMensagem"/>

</androidx.constraintlayout.widget.ConstraintLayout>

